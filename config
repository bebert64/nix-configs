

bindsym $mod+d exec zsh -c "rofi -modi drun#window#run -show drun -show-icons -theme /home/romain/.config/rofi/config/launcher.rasi"


# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
bindsym $mod+o exec zsh -c $HOME/scripts/lock-turn-off-screen
exec --no-startup-id xautolock -time 5 -locker "systemctl suspend" -detectsleep
exec --no-startup-id $HOME/scripts/launch_xss-lock.sh
# exec --no-startup-id "sleep 5 && xss-lock -- lock.sh"
exec --no-startup-id xset s 180 180 


exec_always --no-startup-id autorandr --change --force
